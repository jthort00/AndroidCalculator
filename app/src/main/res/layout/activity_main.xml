<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BCE1F2"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/appTitleBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="My Android Calculator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="413dp"
        android:layout_height="565dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/button_sin"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:backgroundTint="#1D99A9"
                android:text="sin"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/button_cos"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:backgroundTint="#1D99A9"
                android:text="cos"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/button_tan"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:backgroundTint="#1D99A9"
                android:text="tan"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/button_div"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:backgroundTint="#1D99A9"
                android:onClick="inputOperation"
                android:text="/"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/button_num_7"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:backgroundTint="#2196F3"
                android:onClick="inputNumber"
                android:text="7"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/button_num_8"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:backgroundTint="#2196F3"
                android:onClick="inputNumber"
                android:text="8"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/button_num_9"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:backgroundTint="#2196F3"
                android:onClick="inputNumber"
                android:text="9"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/button_product"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:backgroundTint="#1D99A9"
                android:onClick="inputOperation"
                android:text="*"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/button_num_4"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:backgroundTint="#2196F3"
                android:onClick="inputNumber"
                android:text="4"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/button_num_5"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:backgroundTint="#2196F3"
                android:onClick="inputNumber"
                android:text="5"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/button_num_6"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:backgroundTint="#2196F3"
                android:onClick="inputNumber"
                android:text="6"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/button_minus"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:backgroundTint="#1D99A9"
                android:onClick="inputOperation"
                android:text="-"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/button_num_1"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:backgroundTint="#2196F3"
                android:onClick="inputNumber"
                android:text="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/button_num_2"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:backgroundTint="#2196F3"
                android:onClick="inputNumber"
                android:text="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/button_num_3"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:backgroundTint="#2196F3"
                android:onClick="inputNumber"
                android:text="3"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/button_plus"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:backgroundTint="#1D99A9"
                android:onClick="inputOperation"
                android:text="+"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_clear"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:backgroundTint="#0C2AAF"
                android:onClick="clear"
                android:text="AC"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/button_num_0"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:backgroundTint="#2196F3"
                android:onClick="inputNumber"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/button_comma"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:backgroundTint="#2196F3"
                android:text=","
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/button_equal"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:backgroundTint="#0C2AAF"
                android:onClick="equalOperation"
                android:text="="
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/resultBox"
        android:layout_width="384dp"
        android:layout_height="48dp"
        android:onClick="inputNumber"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rad/Deg"
        tools:layout_editor_absoluteX="303dp"
        tools:layout_editor_absoluteY="34dp" />

</androidx.constraintlayout.widget.ConstraintLayout>